  <div class="container p-4">
    <div class="card p-3 mb-4">
        <%= render @mainpost %>
        <p>
          <%= link_to "Show this post", @mainpost, class: "btn btn-secondary" %>
        </p>
    </div>
  </div>
</div>

<div id="posts">
  <% @posts.each do |post| %>
    <div class="card p-3 mb-4">
      <%= render post %>
      <p>
        <%= link_to "Show this post", post, class: "btn btn-secondary" %>
      </p>
    </div>
  <% end %>
</div>

